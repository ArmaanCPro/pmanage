{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 30,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/lib/${presetName}",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}",
                "ENABLE_ASAN": "OFF",
                "ENABLE_UBSAN": "OFF",
                "ENABLE_TSAN": "OFF",
                "ENABLE_IPO": "OFF"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_ASAN": "ON",
                "ENABLE_UBSAN": "ON",
                "ENABLE_IPO": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": "common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-build",
            "displayName": "Debug Build",
            "configurePreset": "debug",
            "configuration": "Debug",
            "targets": [
                "pmanage"
            ]
        },
        {
            "name": "release-build",
            "displayName": "Release Build",
            "configurePreset": "release",
            "configuration": "Release",
            "targets": [
                "pmanage"
            ]
        },

        {
            "name": "debug-test",
            "displayName": "Debug Test Build",
            "configurePreset": "debug",
            "configuration": "Debug",
            "targets": [
                "pmanageTests"
            ]
        },
        {
            "name": "release-test",
            "displayName": "Release Test Build",
            "configurePreset": "release",
            "configuration": "Release",
            "targets": [
                "pmanageTests"
            ]
        }
    ]
}
